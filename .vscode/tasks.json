{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "shell",
      "command": "nodemon -x 'make || exit 1'",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "(.*):(\\d*):(\\d*):(error|warning|info):(.*)",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[nodemon\\] starting .*",
          "endsPattern": "^\\[nodemon\\] ((clean exit)|(app crashed)) .*"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
